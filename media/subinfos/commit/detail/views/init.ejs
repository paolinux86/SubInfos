<%
	commit = this[0];
	steal.dev.log(commit);
%>

<div id="commit_info" class="row">
	<div id="author">
		<span class="label">Autore:</span> <%= commit.username %>
	</div>
	<div id="revision">
		<span class="label">Revisione:</span> <%= commit.revision %>
	</div>
	<div id="date">
		<span class="label">Data:</span> <%= commit.datetime %>
	</div>
	<div id="comment">
		<span class="label">Commento:</span> <%= commit.comment %>
	</div>
</div>

<div id="commit_content" class="row scroll-y">
	<div class="commit_more_details boxed">
		<table>
			<tr>
				<td class="header">Revisione:</td>
				<td><%= commit.revision %></td>
			</tr>
			<tr>
				<td class="header">Autore:</td>
				<td><%= commit.username %></td>
			</tr>
			<tr>
				<td class="header">Data:</td>
				<td><%= commit.datetime %></td>
			</tr>
		</table>
	</div>
	
	<div class="header">Commento:</div>
	<p class="commit_comment"><%= commit.comment %></p>

	<div class="header">Modifiche:</div>
	<div id="commit_diff"></div>
</div>
