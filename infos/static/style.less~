.gradient {
	@basecolor: #151515;
	@color1: lighten(@basecolor, 15%);
	@color2: lighten(@basecolor, 20%);

	@stop1: 0%;
	@stop2: 16%;
	@stop3: 50%;
	@stop4: 84%;
	@stop5: 100%;

	background: @basecolor; /* Old browsers */
	background: -moz-linear-gradient(top, @color2 @stop1, @color1 @stop2, @basecolor @stop3, @color1 @stop4, @color2 @stop5); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(@stop1, @color2), color-stop(@stop2, @color1), color-stop(@stop3, @basecolor), color-stop(@stop4, @color1), color-stop(@stop5, @color2)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, @color2 @stop1, @color1 @stop2, @basecolor @stop3, @color1 @stop4, @color2 @stop5); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, @color2 @stop1, @color1 @stop2, @basecolor @stop3, @color1 @stop4, @color2 @stop5); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, @color2 @stop1, @color1 @stop2, @basecolor @stop3, @color1 @stop4, @color2 @stop5); /* IE10+ */
	background: linear-gradient(to bottom, @color2 @stop1, @color1 @stop2, @basecolor @stop3, @color1 @stop4, @color2 @stop5); /* W3C */

	color: contrast(@basecolor);
}

