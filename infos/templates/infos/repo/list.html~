<script>
	$(".repo").click(function() {
		var repo_id = $(this).find(".repo_id").text();
		$("body").trigger("repo_selected", [ { id: repo_id } ]);

		$(this).siblings(".current").removeClass("current");
		$(this).addClass("current");
	});
</script>
